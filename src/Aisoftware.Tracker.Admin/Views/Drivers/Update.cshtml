@model Aisoftware.Tracker.Borders.Models.Driver

<section class="content-header">
    <h1>
        Motorista
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Editar Motorista</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal">
            <div class="box-body">
                <div class="form-group">
                    <label for="Name" class="col-sm-2 control-label">Nome</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Name" value="@Model.Name">
                    </div>
                </div>
                <div class="form-group">
                    <label for="UniqueId" class="col-sm-2 control-label">Identificador</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="UniqueId" placeholder="UniqueId"
                            value="@Model.UniqueId" readonly>
                    </div>
                </div>
                <div class="form-group">
                    <label for="Document" class="col-sm-2 control-label">Documento</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" name="Document" placeholder="Número do Documento" value="@Model.Document">
                    </div>

                    <label for="DocumentValidAt" class="col-sm-2 control-label">Válido até</label>
                    <div class="col-sm-4">
                        <input type="datetime-local" class="form-control" name="DocumentValidAt" value="@Model.DocumentValidAt">
                    </div>
                </div>
                <input type="hidden" name="Id" value="@Model.Id" />
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" class="btn btn-default" formaction="/@ViewBag.ControllerName/Cancel"
                    formmethod="post">Voltar</button>
                <button type="submit" class="btn btn-info pull-right" formaction="/@ViewBag.ControllerName/UpdateDriver"
                    formmethod="post">Editar</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
    <!-- /.box -->
</section>