<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Usuário
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Cadastrar Usuário</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal">
            <div class="box-body">
                <div class="form-group">
                    <label for="Name" class="col-sm-2 control-label">Nome</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Name" placeholder="Nome">
                    </div>
                </div>
                <div class="form-group">
                    <label for="Email" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" name="Email" placeholder="Email">
                    </div>
                </div>
                <div class="form-group">
                    <label for="Password" class="col-sm-2 control-label">Senha</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" name="Password" placeholder="Senha">
                    </div>
                </div>
                <div class="form-group">
                    <label for="Phone" class="col-sm-2 control-label">Telefone</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Phone" placeholder="Telefone">
                    </div>
                </div>
                <div class="form-group">
                    <label for="checkDisabled" class="col-sm-2 control-label">Desativado</label>
                    <div class="col-sm-10">
                        <input id="checkDisabled" type="checkbox" class="custom-control-input" name="checkDisabled">
                    </div>
                </div>
                <div class="form-group">
                    <label for="checkReadonly" class="col-sm-2 control-label">Somente Leitura</label>
                    <div class="col-sm-10">
                        <input id="checkReadonly" type="checkbox" class="custom-control-input" name="checkReadonly">
                    </div>
                </div>
                <div class="form-group">
                    <label for="checkDeviceReadonly" class="col-sm-2 control-label">Dispositivos Somente Leitura</label>
                    <div class="col-sm-10">
                        <input id="checkDeviceReadonly" type="checkbox" class="custom-control-input"
                            name="checkDeviceReadonly">
                    </div>
                </div>
            </div>
            <input type="hidden" id="Readonly" name="Readonly">
            <input type="hidden" id="DeviceReadonly" name="DeviceReadonly">
            <input type="hidden" id="Disabled" name="Disabled">

            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" class="btn btn-default" formaction="Cancel" formmethod="post">Voltar</button>
                <button type="submit" class="btn btn-info pull-right" formaction="CreateUser"
                    formmethod="post">Cadastrar</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
    <!-- /.box -->
    <script>
        $(document).ready(function () {
            setCheckbox();
        });

        $("#checkReadonly").click(function () {
            setCheckbox("Readonly");
        });
        $("#checkDeviceReadonly").click(function () {
            setCheckbox("DeviceReadonly");
        });
        $("#checkDisabled").click(function () {
            setCheckbox("Disabled");
        });

        function setCheckbox(value) {
            var isChecked = $(`input:checkbox[name=check${value}]`).is(':checked');
            if (isChecked) {
                $(`#${value}`).val(true);
            } else {
                $(`#${value}`).val(false);
            }
        }
    </script>
</section>