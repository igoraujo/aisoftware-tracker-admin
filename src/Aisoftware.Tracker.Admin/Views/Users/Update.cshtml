@model Aisoftware.Tracker.Borders.Models.User

<section class="content-header">
    <h1>
        Usuário
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Editar Usuário</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal">
            <div class="box-body">
                <div class="form-group">
                    <label for="Email" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                        <input type="Email" class="form-control" name="Email" value="@Model.Email">
                    </div>
                </div>
                <div class="form-group">
                    <label for="Name" class="col-sm-2 control-label">Nome</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Name" placeholder="Nome" value="@Model.Name">
                    </div>
                </div>
                <div class="form-group">
                    <label for="Phone" class="col-sm-2 control-label">Telefone</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Phone" placeholder="Telefone"
                            value="@Model.Phone">
                    </div>
                </div>
                <div class="form-group">
                    <label for="Disabled" class="col-sm-2 control-label">Desabilitado</label>
                    <div class="col-sm-10">
                        @Html.CheckBoxFor(m => m.Disabled)
                        @* <input type="checkbox" class="custom-control-input" name="Disabled" checked="@Model.Disabled"> *@
                    </div>
                </div>
                <div class="form-group">
                    <label for="Readonly" class="col-sm-2 control-label">Somente Leitura</label>
                    <div class="col-sm-10">
                        @Html.CheckBoxFor(m => m.Readonly)
                        @* <input type="checkbox" class="custom-control-input" name="Readonly" checked="@Model.Readonly"> *@
                    </div>
                </div>
                <div class="form-group">
                    <label for="DeviceReadonly" class="col-sm-2 control-label">Dispositivo Somente Leitura</label>
                    <div class="col-sm-10">
                        @Html.CheckBoxFor(m => m.DeviceReadonly)
                        @* <input type="checkbox" class="custom-control-input" name="DeviceReadonly" checked="@Model.DeviceReadonly"> *@
                </div>
                </div>
                <input type="hidden" name="Id" value="@Model.Id" />
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" class="btn btn-default" formaction="/@ViewBag.ControllerName/Cancel" formmethod="post">Voltar</button>
                <button type="submit" class="btn btn-info pull-right" formaction="/@ViewBag.ControllerName/UpdateUser" formmethod="post">Editar</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
    <!-- /.box -->
</section>