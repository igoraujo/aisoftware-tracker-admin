@model Aisoftware.Tracker.Admin.CodeBehind.AisoftwareTrackerPageModel
@{
    var error = Model.MoviyCode.GetErro();
    var warning = Model.MoviyCode.GetWarning();
    var success = Model.MoviyCode.GetSuccess();
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Aisoftware - Tracker Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" type="image/png" href="~/images/logo/favicon.png" />

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
</head>
<body>
    <div class="app">
        <div class="container-fluid p-h-0 p-v-20 bg full-height d-flex">
            <div class="d-flex flex-column justify-content-between w-100">
                <div class="container d-flex h-100">
                    <div class="row align-items-center w-100">
                        <div class="col-md-7 col-lg-5 m-h-auto">
                            <div class="card shadow-lg">
                                @RenderBody()
                            </div>
                        </div>
                    </div>
                </div>
                <footer class="footer">
                    <div class="footer-content">
                        <p class="m-b-0">Copyright © 2020 Aisoftware. Todos os direitos reservados.</p>
                    </div>
                </footer>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(error))
    {
        <partial name="../shared/controles/erro" model="@("Ops!|"+error)" />
    }
    @if (!string.IsNullOrEmpty(warning))
    {
        <partial name="../shared/controles/aviso" model="@("Atenção!|"+warning)" />
    }
    @if (!string.IsNullOrEmpty(success))
    {
        <partial name="../shared/controles/sucesso" model="@("Uhuuuuu!|"+success)" />
    }

    <script src="~/js/app.min.js"></script>
    <script src="~/js/vendors.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

